<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/textDataset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/fredoka"
            android:paddingBottom="16dp"
            android:text="@string/dataset"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/healthy_4811032"
            android:scaleType="centerCrop"
            android:contentDescription="dataset Logo"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <!-- Description Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredoka"
            android:justificationMode="inter_word"
            android:paddingBottom="16dp"
            android:text="@string/dscdata"
            android:textSize="16sp"
            tools:ignore="UnusedAttribute" />

        <!-- Image Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/graf"
            android:contentDescription="Dataset Logo"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descdataset"
                    android:fontFamily="@font/fredoka"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:text="@string/_1_risiko_penyakit_jantung_lebih_tinggi_pada_pria"
                    android:textSize="16sp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:text="@string/_2_tingkat_penyakit_jantung_lebih_tinggi_pada_non_perokok_sedangkan_yang_terendah_pada_mantan_perokok"
                    android:textSize="16sp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:text="@string/_3_orang_dengan_riwayat_keluarga_penyakit_jantung_memiliki_risiko_lebih_besar_untuk_terserang_penyakit_tersebut"
                    android:textSize="16sp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:text="@string/_4_penderita_diabetes_memiliki_risiko_lebih_tinggi_untuk_mengalami_penyakit_jantung"
                    android:textSize="16sp"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Button Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnToKaggle"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="45dp"
            android:background="@color/yellow">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ivLogoKaggle"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/site_logo"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fredoka"
                    android:paddingStart="8dp"
                    android:text="Buka di Kaggle"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/ivLogoKaggle"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
